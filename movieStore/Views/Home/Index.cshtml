    var intervalId;

    function startUpdatingProgressIndicator() {

        $('#progress').show();

        intervalId = setInterval(
            function () {
                $.post(
                    "/Home/progress",
                    function (progress) {
                        $('#progress').css({ width: progress + "%" });
                        $("#label").html(progress + "%");
                    }
                );
            },
            10
        );
    }

    function stopUpdatingProgressIndicator() {
        clearInterval(intervalId);
    }


